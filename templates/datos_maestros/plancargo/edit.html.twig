						<label>
							Inc. Mes 2
							{{ form_errors(form.incrementoMes2) }}
							{{ form_widget(form.incrementoMes2) }}
						</label>
					</div>
				</div>
				<div class="modal-footer">
					<div class="form-group"><a class='btn btn-danger' href="{{ path('plancargo_index') }}">Volver</a></div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>

	</div>


{% endblock %}
