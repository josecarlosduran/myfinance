{% extends 'base.html.twig' %}

{% block container %}
    <div class="col-lg-8 offset-lg-2 col-md-12 ">
        <div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class=" col-md-6 col-sm-6">
						<h2>Mantener <b>Planes de Cargo</b></h2>
					</div>
					<div class=" col-md-6 col-sm-6">
						<a href="{{ path('plancargo_new') }}" class="btn btn-success"><i class="fa fa-plus-circle"></i> <span>Nueva Cuenta</span></a>
					</div>
				</div>
			</div>


			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Descripcion</th>
						<th>Dia Inicial</th>
						<th>Dia Final</th>
						<th>Dia Cargo</th>
						<th>+ Mes</th>
						<th>Dia Inicial</th>
						<th>Dia Final</th>
						<th>Dia Cargo</th>
						<th>+ Mes</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for plancargo in planesCargo %}
							<td>{{ plancargo.descripcion }}</td>
							<td>{{ plancargo.diaInicial1 }}</td>
							<td>{{ plancargo.diaFinal1 }}</td>
							<td>{{ plancargo.diaCargo1 }}</td>
							<td>{{ plancargo.incrementoMes1 }}</td>
							<td>{{ plancargo.diaInicial2 }}</td>
							<td>{{ plancargo.diaFinal2 }}</td>
							<td>{{ plancargo.diaCargo2 }}</td>
							<td>{{ plancargo.incrementoMes2 }}</td>
							<td>
								<a href="{{ path('plancargo_edit', { 'id': plancargo.id }) }}"><span class="fa fa-edit" aria-hidden="true"></span></a>
								<a class="openDeleteModal" href="#deleteCuentaModal" data-toggle="modal" data-id="{{ plancargo.id }}"><span class="fa fa-trash" aria-hidden="true"></span></a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
				{{ include('paginacion.html.twig',{'ruta_index' : 'plancargo_index', 'numPag' : numPag, 'pagesCount' : pagesCount}) }}

    </div>


	<!-- Delete Modal HTML -->
	<div id="deleteCuentaModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form action="{{ path('plancargo_delete') }}" method="get">
					<div class="modal-header">
						<h4 class="modal-title">Borrar Plan de Cargo</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
						<p>Â¿Estas Seguro de Borrar este Plan de Cargo?</p>
						<p class="text-warning"><small>Esta Accion no se puede deshacer</small></p>
					</div>
					<div class="modal-footer">
						<input type="hidden" id="idborrar" name="id" value="0">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-danger" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>

	<script>

			$(document).on("click", ".openDeleteModal", function () {
				var idDelete = $(this).data('id');
				$('#idborrar').val(idDelete);

			});

	</script>

{% endblock %}

{% block body %}


{% endblock %}
