{% extends 'base.html.twig' %}

{% block container %}
    <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
        <div class="table-wrapper">
			<div class="table-header">
				<div class='table-title'>
					<h2>{{ accion }} <b>Forma de Pago</b></h2>
				</div>
			</div>

			<div class="table-body">
				{{ form_start(form,{'action':'','method':'post'}) }}
				<div class='form-group'>
					<label>
						Descripci√≥n
						{{ form_errors(form.descripcion) }}
						{{ form_widget(form.descripcion) }}
					</label>
				</div>
				<div class='form-group'>
					<label>
						Tipo
						{{ form_errors(form.tipo) }}
						{{ form_widget(form.tipo,{ 'attr' : { 'class' : 'form-group' } }) }}
					</label>
				</div>
				<div class='form-group'>
					<label>
						Cuenta
						{{ form_errors(form.cuenta) }}
						{{ form_widget(form.cuenta,{ 'attr' : { 'class' : 'form-group' } }) }}
					</label>
				</div>
				<div class='form-group'>
					<label>
						Plan de Cargo
						{{ form_errors(form.plancargo) }}
